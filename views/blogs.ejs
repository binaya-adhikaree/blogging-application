<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title></title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="500px" height="500px" />
      <p class="mt-3" style="width: 600px"><%= blog.body %></p>
    </div>

    <div class="container">
      <p class="container mt-3">Author</p>
      <img src="<%= blog.createdBy.profileImage %>" width="50px" />
      <%= blog.createdBy.fullName %>
    </div>

    <% if (locals.user) { %>
    <div class="container mt-3">
      <h1>comments</h1>
      <form action="/blog/comment/ <%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            class="form-control width=1000px"
            name="content"
            placeholder="Enter your comment"
          /><button class="btn btn-sm btn-primary" type="submit">
            Comment
          </button>
        </div>
      </form>
    </div>
    <div class="mt-3 container">
      <% comments.forEach(comment => { %>
      <div class="container">
        <img src="<%= comment.createdBy.profileImage %>" height="50px"/>
        <%= comment.createdBy.fullName %>

        <pre><%= comment.content %></pre>
      </div>
      <% }) %>
    </div>
    <% } %> <%- include("./partials/scripts") %>
  </body>
</html>
